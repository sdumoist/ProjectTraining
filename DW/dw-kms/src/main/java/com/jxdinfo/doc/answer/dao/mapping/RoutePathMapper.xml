<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxdinfo.doc.answer.dao.RoutePathMapper">


    <select id="getTotleNumAnswers" resultType="int">
        SELECT
            COUNT(*)
        FROM
            qa_question_answer qqa
        WHERE
            qqa.QUE_ID = #{queId}
        AND qqa.STATE = '0'
    </select>

</mapper>